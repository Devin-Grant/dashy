<%- include('../header') %>
<%- include("../side-nav"); %>
<%- include("../top-nav"); %>
<!-- page content -->
<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Cluster Status</h3>
      </div>
    </div>

    <div class="title_right">
      <div class="col-md-3 col-sm-5 col-xs-12 form-group pull-right top_search">
        <form method="GET" action="/clusters/status">
          <div class="input-group">
            <select class="form-control" name="node">
              <option value="default">Select Node</option>
              <% ns.forEach(function(n) { %>
                <option value="<%= n._id %>"><%= n.name %></option>
              <% }) %>
            </select>
            <span class="input-group-btn">
              <button class="btn btn-default" type="submit">Go!</button>
            </span>
          </div>
        </form>

      </div>
    </div>
  </div>

  <div class="clearfix"></div>

  <div class="row">

    <div class="col-md-12">
      <div class="x_panel">
        <div class="x_content">

          <% nodes.forEach(function(node) { %>
          <div class="col-md-4 col-sm-12 col-xs-12">
            <div class="x_panel">
              <div class="x_title">
                <h2><%= node.name %></h2>
                <div class="clearfix"></div>
              </div>
              <ul class="list-unstyled top_profiles scroll-view" style="height:auto;">
                <li class="media event">
                  <div class="media-body">
                    <a class="title" href="#">address</a>
                    <p style="margin-bottom:5px;"><code style="background-color:#5D3939;color:#ffffff;font-size:1em;"><%= node.address %> </code></p>
                  </div>
                </li>
                <li class="media event">
                  <div class="media-body">
                    <a class="title" href="#">status</a>
                    <p style="margin-bottom:5px;"><code style="background-color:#5D3939;color:#ffffff;font-size:1em;"><%= node.status %> </code></p>
                  </div>
                </li>
              </ul>
            </div>
          </div>
          <% }) %>

        </div>

      </div>
    </div>

  </div>


</div>
</div>
<!-- /page content -->

<!-- footer content -->
<%- include("../footer"); %>





